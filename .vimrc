execute pathogen#infect()
syntax on
filetype plugin indent on
set expandtab
set tabstop=2
set shiftwidth=2
set shiftround
set number
set ruler
set incsearch
set noswapfile
set nowritebackup
set nobackup
set backspace=2
set history=50
set clipboard=unnamed

set wildignore+=*/tmp/*

let g:ctrlp_map = '<c-p>'
let g:ctrlp_cmd = 'CtrlP'
